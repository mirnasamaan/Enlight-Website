
@{
    ViewBag.Title = "Details";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h4>Delete User?</h4>
                    <p class="font-gray-dark">
                        Are you sure you want to delete this user?
                    </p>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            <a ng-click="listUsers()" class="btn btn-primary">Back to list</a>
                            <button ng-click="confirmDelete()" type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Email:
                                </td>
                                <td>
                                    <input type="text" ng-model="user.Email" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Creation Date:
                                </td>
                                <td>
                                    <input type="text" ng-model="user.CreationDate" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Last Login Date:
                                </td>
                                <td>
                                    <input type="text" ng-model="user.LastLoginDate" disabled />
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </tfoot>
                    </table>
                    <a ng-click="listUsers()" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
