<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Add User <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form ng-submit="add(addform)" name="addform" ng-validate="validationOptions">
                        @Html.ValidationSummary()
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr style="text-align:left;">
                                    <th>Attribute</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <label for="name">Email:</label>
                                    </td>
                                    <td>
                                        <input type="email" name="email" ng-model="addUserForm.email" required />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="title">Password:</label>
                                    </td>
                                    <td>
                                        <input type="password" id="pass" name="password" ng-model="addUserForm.password" required />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="title">Password:</label>
                                    </td>
                                    <td>
                                        <input type="password" name="confirmpassword" ng-model="addUserForm.confirmpassword" required />
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr style="text-align:left;">
                                    <th>Attribute</th>
                                    <th>Value</th>
                                </tr>
                            </tfoot>
                        </table>
                        <input type="submit" value="submit" class="btn btn-success">
                    </form>
                    <a ng-click="listUsers()" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>