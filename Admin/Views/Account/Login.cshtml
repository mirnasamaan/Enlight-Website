@*@model FreightSigma.Admin.Models.Account.LoginVM*@
@{
    Layout = "";
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login | Enlight</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://colorlib.com/polygon/gentelella/css/animate.min.css" rel="stylesheet">
    <link href="~/Content/css/custom.min.css" rel="stylesheet">
    <link href="~/Content/css/site.css" rel="stylesheet" />
</head>
<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form action="/Account/Login" method="post">
                        <h1>Freight Sigma</h1>
                        @Html.ValidationSummary()
                        <div>
                            <input type="text" name="Email" class="form-control" placeholder="Email" required="" />
                        </div>
                        <div>
                            <input type="password" name="Password" class="form-control" placeholder="Password" required="" />
                        </div>
                        <div class="g-recaptcha" data-sitekey="6Lfz5iETAAAAAGntwM5ec8BcZYsqWu7LMDD9WQl3"></div>
                        <input type="hidden" name="recaptcha" />
                        <div>
                            <button type="submit" class="btn btn-default submit">Log in</button>
                            <a class="reset_pass" href="#">Lost your password?</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    <script src="~/scripts/jquery.min.js"></script>
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/additional-methods.min.js"></script>
    <script src='https://www.google.com/recaptcha/api.js'></script>
    <script>
        jQuery.validator.addMethod("recaptcha", function (value, element) {
            var response = grecaptcha.getResponse();
            if (response.length == 0) {
                return false;
            } else {
                return true;
            }
        }, jQuery.validator.format("Please check the reCaptcha validation."));

        $("form").validate({
            ignore: [],
            rules: {
                Email: { required: true, email: true },
                Password: { required: true },
                recaptcha: { recaptcha: true }
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            }
        });
    </script>
</body>
</html>