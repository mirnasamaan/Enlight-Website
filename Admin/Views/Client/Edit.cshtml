<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Edit Client <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <form @*ng-submit="edit(editform)"*@ name="editform" ng-model="editform" enctype="multipart/form-data" ng-validate="validationOptions">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr style="text-align:left;">
                                    <th>Attribute</th>
                                    <th>Value</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <label for="name">Name:</label>
                                    </td>
                                    <td>
                                        <input type="text" ng-model="client.Name" id="name" name="name" />
                                        <input type="hidden" ng-model="client.ID" id="id" name="id" />
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <label for="title">Logo:</label>
                                    </td>
                                    <td>
                                        <input type="file" ngf-select ng-model="picFile" name="file" accept="image/*" ngf-max-size="2MB" ngf-model-invalid="errorFile">
                                        <i ng-show="editform.file.$error.maxSize">
                                            File too large
                                            {{errorFile.size / 1000000|number:1}}MB: max 2M
                                        </i>
                                        <img ng-show="editform.file.$valid" ngf-thumbnail="picFile" class="thumb"> <button ng-click="picFile = null" ng-show="picFile">Remove</button>
                                        <br>
                                        <span class="progress" ng-show="picFile.progress >= 0">
                                            <div style="width:{{picFile.progress}}%" ng-bind="picFile.progress + '%'"></div>
                                        </span>
                                        <span ng-show="picFile.result">Upload Successful</span>
                                        <span class="err" ng-show="errorMsg">{{errorMsg}}</span>
                                    </td>
                                </tr>
                            </tbody>
                            <tfoot>
                                <tr style="text-align:left;">
                                    <th>Attribute</th>
                                    <th>Value</th>
                                </tr>
                            </tfoot>
                        </table>
                        @*<input type="submit" value="submit" class="btn btn-success">*@
                        <button ng-click="uploadPic(picFile)">Submit</button>
                    </form>
                    <a ng-click="listClients()" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>