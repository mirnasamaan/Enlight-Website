
@{
    ViewBag.Title = "Details";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Client Details <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Name:
                                </td>
                                <td>
                                    <input type="text" ng-model="client.Name" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Logo:
                                </td>
                                <td>
                                    <img class="img-responsive client-logo" ng-src="~/Uploads/Clients/{{ client.Logo }}" />
                                    <input type="text" ng-model="client.Logo" disabled />
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </tfoot>
                    </table>
                    <a ng-click="listClients()" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
