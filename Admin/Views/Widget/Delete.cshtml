
@{
    ViewBag.Title = "Details";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h4>Delete Widget?</h4>
                    <p class="font-gray-dark">
                        Are you sure you want to delete this widget?
                    </p>
                    <div class="ln_solid"></div>
                    <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                            <a ng-click="listWidgets()" class="btn btn-primary">Back to list</a>
                            <button ng-click="confirmDelete()" type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Name:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Name" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Title:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Title" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Subtitle:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.SubTitle" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Content:
                                </td>
                                <td>
                                    <textarea type="text" class="content" ng-model="widget.Content"></textarea>
                                    @*<textarea id="widgetcontent" name="widgetcontent" hidden></textarea>*@
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Order:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Order" disabled />
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </tfoot>
                    </table>
                    <a ng-click="listWidgets()" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
