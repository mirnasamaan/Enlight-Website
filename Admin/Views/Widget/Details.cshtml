
@{
    ViewBag.Title = "Details";
}

<div class="">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Widget Details <small></small></h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li>
                            <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table id="datatable" class="table table-striped table-bordered">
                        <thead>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    Name:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Name" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Title:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Title" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Subtitle:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.SubTitle" disabled />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Content:
                                </td>
                                <td>
                                    <textarea type="text" class="content" ng-model="widget.Content"></textarea>
                                    @*<textarea id="widgetcontent" name="widgetcontent" hidden></textarea>*@
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Order:
                                </td>
                                <td>
                                    <input type="text" ng-model="widget.Order" disabled />
                                </td>
                            </tr>
                        </tbody>
                        <tfoot>
                            <tr style="text-align:left;">
                                <th>Attribute</th>
                                <th>Value</th>
                            </tr>
                        </tfoot>
                    </table>
                    <a href="/Page" class="btn btn-primary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
</div>
